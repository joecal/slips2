  <%= form_for @user, url: session_path, method: :post do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <br><%= f.submit "Sign In", class: 'btn' %>
    <%= link_to "Sign Up", new_user_path, class: 'btn' %>
  <% end %>
