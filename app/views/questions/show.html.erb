<h2><%= @question.question_text %></h2>
  <%= link_to "Edit Question", edit_question_path(@question), class: 'btn btn-mini btn-success' if @current_user %>
  <%= link_to "Delete Question", @question, method: :delete, class: 'btn btn-mini btn-danger' if @current_user %>
<br>
<br>
  <%= form_for random_answer_path(@question) do |f| %>
    <%= f.text_field :body if @current_user %>
    <%= f.submit "Submit Answer (WRONG ROUTE!)" if @current_user%>
  <% end %>
<h3>Submitted Answers</h3><%= link_to "New Answer Route (WORKS!)", new_question_answer_path(@question), class: 'btn btn-mini' if @current_user %>
<br>
<br>
<ul>
  <% @question.answers.each do |answer| %>
    <li><%= link_to "#{answer.body}", answer %></li>
    <h5>Submitted by <%= link_to answer.user.username, answer.user %></h5>
  <% end %>
</ul>
