<h2><%= @question.subject.name %></h2>
<h3><%= @question.question_text %></h3>
  <%= link_to "Answer", new_question_answer_path(@question), class: 'btn' if @current_user %>
<br>
<br>
<h3>Submitted Answers</h3>
<ul>
  <% @question.answers.each do |answer| %>
    <li><%= link_to "#{answer.body}", answer %></li>
    <h5>Submitted by <%= link_to answer.user.username, answer.user %></h5>
  <% end %>
</ul>
