<h2>All Subjects <%= link_to "Add Subject", new_subject_path, class: 'btn btn-mini' if @current_user %></h2>
<ul>
  <% @subjects.each do |subject| %>
    <li>
      <%= link_to subject.name, subject %>
    </li>
  <% end %>
</ul>
<h3><%= @current_user.username + "'s Submitted Subjects" if @current_user %></h3>
<ul>
  <% @current_user.subjects.find_each do |subject| %>
    <li>
      <%= link_to subject.name, subject %>
    </li>
  <% end %>
</ul>
