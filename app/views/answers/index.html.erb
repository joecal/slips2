<h2>All Submitted Answers</h2>
<% Subject.find_each do |subject_id| %>
  <ul>
    <h4><%= link_to subject_id.name, subject_id %></h4>
    <ul>
      <% Answer.where(subject_id: subject_id).find_each do |answer| %>
        <li>
          <%= link_to answer.body, answer %>
        </li>
      <% end %>
    </ul>
  </ul>
<% end %>
<h3><%= @current_user.username + "'s Submitted Answers" if @current_user %></h3>
<ul>
  <% @current_user.answers.find_each do |answer| %>
    <li>
      <%= link_to answer.body, answer %>
    </li>
  <% end %>
</ul>
