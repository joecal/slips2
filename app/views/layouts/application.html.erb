<!DOCTYPE html>
<html>
<head>
  <title>Slips 2.0</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <ul class="nav nav-tabs">

  <% if @current_user %>
  <h1><%= link_to "Slips 2.0", @current_user %></h1>
  <% else %>
  <h1><%= link_to "Slips 2.0", root_path %></h1>
  <% end %>
  <li><%= link_to "Welcome, #{@current_user.username}!", user_path(@current_user) if @current_user %></li>
  <li><%= link_to "Sign Out", session_path, method: :delete if @current_user %></li>
  <li><%= link_to "Answers", answers_path %></li>
  <li><%= link_to "Questions", questions_path %></li>
  <li><%= link_to "Subjects", subjects_path %></li>
  <li><%= link_to "Users", users_path %></li>
</ul>

  <nav>

  </nav>
  <% flash.each do |type, message| %>
    <p class="<%= type %>"><%= message %></p>
  <% end %>

<%= yield %>

</div>
</body>
</html>
